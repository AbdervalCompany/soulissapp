<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/TypicalsInfoCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:elevation="2dp"
                                    card_view:cardBackgroundColor="@color/background_floating_material_dark"
                                    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <View
            android:id="@+id/TextViewServiceLine"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_margin="4dp"
            android:background="@color/std_green"/>

        <view
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            class="com.dacer.androidcharts.PieView"
            android:id="@+id/pie_view"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pie_view"
            android:padding="8dp">


            <TextView
                android:id="@+id/textViewTypicalsInfoTit"
                style="@style/CodeFontTitle"
                android:layout_marginLeft="5dip"
                android:text="@string/opt_service"/>

            <TextView
                android:id="@+id/TextViewTypicalsActions"
                style="@style/CodeFontMain"
                android:layout_below="@id/textViewTypicalsInfoTit"
                android:layout_marginLeft="5dip"
                android:textIsSelectable="false"/>


        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>