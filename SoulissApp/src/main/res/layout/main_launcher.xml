<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!--
    <include android:id="@+id/toolbar" layout="@layout/custom_actionbar" />
    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include layout="@layout/custom_actionbar" />
        <!-- The main content view -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/my_awesome_toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">

                <TableLayout
                    android:id="@+id/containervermegame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:weightSum="3">

                        <Button
                            android:id="@+id/ButtonScene"
                            style="@style/CodeFontMain"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/filmmaker"
                            android:drawingCacheQuality="high"
                            android:elevation="2dp"
                            android:freezesText="false"
                            android:text="@string/scenes_title"
                            android:transitionName="helloScenes" />

                        <Button
                            android:id="@+id/Button06"
                            style="@style/CodeFontMain"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/remote"
                            android:drawingCacheQuality="high"
                            android:elevation="2dp"
                            android:text="@string/programs_title"
                            android:transitionName="helloPrograms" />

                        <Button
                            android:id="@+id/ButtonManual"
                            style="@style/CodeFontMain"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/hand"
                            android:elevation="2dp"
                            android:text="@string/manual_title"
                            android:transitionName="helloManual" />
                    </TableRow>

                </TableLayout>

                <include
                    layout="@layout/cardview_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/containervermegame"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp" />


                <include layout="@layout/cardview_basicinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TagsCard"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"/>

                <include layout="@layout/cardview_dbandposition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/BasicInfoCard"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/ServiceInfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbAndPositionCard"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:elevation="2dp"
                    card_view:cardBackgroundColor="@color/background_floating_material_dark"
                    card_view:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/card_thumbnail_image3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawingCacheQuality="high"
                            android:src="@drawable/side3" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/card_thumbnail_image3"
                            android:padding="8dp">

                            <View
                                android:id="@+id/TextViewServiceLine"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:background="@color/std_green" />

                            <TextView
                                android:id="@+id/textViewServiceInfoTit"
                                style="@style/CodeFontTitle"
                                android:layout_marginLeft="5dip"
                                android:text="@string/opt_service" />

                            <TextView
                                android:id="@+id/TextViewServiceActions"
                                style="@style/CodeFontMain"
                                android:layout_below="@id/textViewServiceInfoTit"
                                android:layout_marginLeft="5dip"
                                android:textIsSelectable="false" />

                            <TextView
                                android:id="@+id/textViewDBWarn"
                                style="@style/CodeFontMain"
                                android:layout_below="@id/TextViewServiceActions"
                                android:visibility="gone" />

                            <View
                                android:id="@+id/textViewDBWarnLine"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_below="@id/textViewDBWarn"
                                android:background="@color/std_yellow"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/TextViewWebService"
                                style="@style/CodeFontMain"
                                android:layout_marginLeft="5dip"
                                android:textIsSelectable="false" />

                            <View
                                android:id="@+id/TextViewWebServiceLine"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_above="@id/TextViewWebService"
                                android:background="@color/std_green" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/AntiTheftCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ServiceInfoCard"
                    android:layout_margin="8dp"
                    android:elevation="2dp"
                    card_view:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/TextViewAntiTheft"
                            style="@style/CodeFontMain"
                            android:layout_marginLeft="5dip"
                            android:textIsSelectable="false"
                            android:visibility="gone" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <include layout="@layout/custom_leftdrawer" />

</android.support.v4.widget.DrawerLayout>
