<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="192dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_scrollFlags="scroll|enterAlways">

                <android.support.v7.widget.Toolbar android:id="@+id/my_awesome_toolbar"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="?attr/actionBarSize"
                                                   android:background="@android:color/transparent"
                                                   android:elevation="2dp"
                                                   android:gravity="top"
                                                   app:layout_collapseMode="pin"
                                                   android:minHeight="?attr/actionBarSize" >

                    <RelativeLayout
                        android:id="@+id/actionbar_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/online_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8sp"
                            android:gravity="center_vertical"
                            android:textAllCaps="true"
                            android:textColor="@color/std_green"
                            tools:text="Online"/>

                        <ImageButton
                            android:id="@+id/action_starred"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4sp"
                            android:layout_toLeftOf="@id/online_status"
                            android:contentDescription="Online status Icon"/>

                        <!-- <TextView
                            android:id="@+id/actionbar_title"
                            style="@style/CodeFontActionBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@id/online_status"
                            android:transitionName="hero_title"
                            tools:text="ON/OFF Digitale con AUTO mode"/>  -->

                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>


                <FrameLayout xmlns:tools="http://schemas.android.com/tools"
                             xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:fab="http://schemas.android.com/apk/res-auto"
                             android:layout_width="match_parent"
                             app:layout_collapseMode="parallax"
                             android:layout_height="wrap_content">

                    <ImageView
                        android:transitionName="photo_hero"
                        android:id="@+id/photo"
                        android:layout_width="match_parent"
                        android:src="@drawable/home_automation"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/imageTagIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="4dp"
                        android:src="@drawable/window"  />
                    <ImageView
                        android:id="@+id/infoAlpha"
                        android:transitionName="shadow_hero"
                        android:background="@color/black"
                        android:alpha="0.3"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        />
                    <TextView
                        android:id="@+id/tagTextView"

                        android:transitionName="tag_title"
                        android:textColor="@color/white_bitaplha"
                        android:layout_gravity="bottom|left"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        tools:text="Title Big Swallow"/>

                    <com.melnykov.fab.FloatingActionButton
                        android:id="@+id/fabTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_type="mini"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_mode_edit_24dp"
                        fab:fab_colorNormal="@color/std_green"
                        fab:fab_colorPressed="@color/std_blue_shadow"
                        fab:fab_colorRipple="@color/std_purple"
                        android:layout_gravity="right|bottom" />
                </FrameLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <FrameLayout

            android:id="@+id/detailPane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:layout="@layout/frag_nodedetail"/>


    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/custom_leftdrawer"/>
</android.support.v4.widget.DrawerLayout>

