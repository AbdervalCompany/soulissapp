<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/custom_actionbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_below="@id/my_awesome_toolbar"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo"
                android:transitionName="photo_hero"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="bottom|end"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"

                android:alpha="0.0"

                android:src="@android:drawable/ic_dialog_info"


                android:onClick="showInformation"

                android:contentDescription="bottone" />

            <ImageButton
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="bottom|start"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"

                android:alpha="0.0"

                android:src="@android:drawable/star_big_on"

                android:elevation="4dp"

                android:onClick="showStar"
                />

            <FrameLayout
                android:id="@+id/detailPane"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/my_awesome_toolbar"
                tools:layout="@layout/frag_nodedetail" />



        </FrameLayout>
    </RelativeLayout>

    <include layout="@layout/custom_leftdrawer" />
</android.support.v4.widget.DrawerLayout><!--



