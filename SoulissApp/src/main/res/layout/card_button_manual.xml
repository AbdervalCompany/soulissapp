<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/CardButtonManual"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    card_view:cardElevation="2sp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardBackgroundColor="@color/background_floating_material_dark"
    card_view:cardCornerRadius="2dp"
    android:padding="4dp"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/tools">

    <Button
        android:id="@+id/ButtonManual"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/hand"
        android:elevation="2dp"

        android:maxLines="1"
        android:text="@string/manual_title"
        android:transitionName="helloManual"/>
</android.support.v7.widget.CardView>