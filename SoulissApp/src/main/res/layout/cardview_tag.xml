<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TagCard"
    card_view:cardCornerRadius="4dp"
    card_view:cardPreventCornerOverlap="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:focusable="false" >
        <ImageView
            android:id="@+id/imageViewTag"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/home_automation" />
        <ImageView
            android:layout_alignBottom="@id/imageViewTag"
            android:id="@+id/infoTagAlpha"
            android:background="@color/black"
            android:alpha="0.3"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />

        <TextView
            android:id="@+id/TextViewTagTitle"
            style="@style/CodeFontTitle"
            android:layout_alignTop="@id/infoTagAlpha"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_margin="4dp"
            tools:text="Titolo TAG"
            android:textColor="@color/white_bitaplha"
            android:textIsSelectable="false" >
        </TextView>


        <TextView
            android:id="@+id/TextViewTagDesc"
            style="@style/CodeFontMain"
            android:layout_marginLeft="4dp"
            android:textColor="@color/white_bitaplha"
            android:layout_below="@id/TextViewTagTitle"
            tools:text="Descrizione TAG molto lunga e piena di fanghiglia"
            android:text="@string/health" >
        </TextView>
    </RelativeLayout>

</android.support.v7.widget.CardView>